{
  "name": "IntelliChat",
  "version": "1.0",
  "description": "Intelligent Chatbot Assistant",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "tabs"
  ],
  "content_scripts": [
    {
      "js": ["contentScript.js"],
      "matches": ["https://*/*"]
    }
  ],
  "manifest_version": 3
}